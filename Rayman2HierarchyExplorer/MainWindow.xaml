<Window x:Class="Rayman2HierarchyExplorer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rayman2HierarchyExplorer"
        mc:Ignorable="d"
        Title="Rayman 2 Hierarchy Explorer" Height="768" Width="1024">
  <Grid>
    <TreeView x:Name="treeView" HorizontalAlignment="Left" Height="692" Margin="10,35,0,0" VerticalAlignment="Top" Width="996"/>
    <Button x:Name="retrieveButton" Content="Retrieve Hierarchy" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="120" Click="retrieveHierarchy"/>
    <CheckBox x:Name="autoRefreshEnabled" Content="Auto-refresh" HorizontalAlignment="Left" Margin="135,12,0,0" VerticalAlignment="Top"/>
    <Button x:Name="makeAllVisible" Content="Make all objects visible" HorizontalAlignment="Left" Margin="227,10,0,0" VerticalAlignment="Top" Width="133" Click="ButtonMakeAllVisible"/>
    <Button x:Name="retrieveButton_Copy1" Content="Make all objects invisible" HorizontalAlignment="Left" Margin="365,10,0,0" VerticalAlignment="Top" Width="139" Click="ButtonMakeAllInvisible"/>

  </Grid>
</Window>
